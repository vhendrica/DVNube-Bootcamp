 programa
  {
    funcao inicio()
    {
        cadeia recebe

        escreva("Você está sentado no sofá. Deseja levantar? OBS: Responda com sim ou não. ")
        leia(recebe)
        se (recebe == "sim")
        {
            escreva("Levantando do sofá...")
            levantarDoSofa()
        }
        senao
        {
            inicio()
        }
    }

    funcao levantarDoSofa()
    {
        cadeia recebe
        escreva("Você está em pé. Deseja sentar novamente ou ir até o banheiro? ")
        leia(recebe)
        se (recebe == "sentar" ou recebe == "sentar novamente")
        {
            inicio()
        }
        senao
        {
            irAoBanheiro()
        }
    }

    funcao irAoBanheiro()
    {
        cadeia porta
        cadeia escovar = "nao"
        cadeia abrirPorta

        escreva("A porta do banheiro está aberta? OBS: Responda com sim ou não. ")
        leia(porta)
        se (porta == "sim")
        {
            escreva("Entrando no banheiro... Você está dentro do banheiro. ")
        }
        senao
        {
            enquanto (porta != "sim")
            {
                escreva("Deseja abrir a porta do banheiro? ")
                leia(abrirPorta)
                se (abrirPorta == "sim" ou abrirPorta == "desejo")
                {
                    escreva("Abrindo porta do banheiro... Porta Aberta!")
                    porta = "sim"
                    enquanto (escovar != "sim")
                    {
                        escreva("Deseja escovar os dentes?")
                        leia(escovar)
                    }

                    escovarOsDentes()
                }
            }
        }
    }

    funcao escovarOsDentes()
    {
        cadeia banho
        escreva("Escovando os dentes... Dentes Escovados! Deseja tomar banho?")
        leia(banho)

        enquanto (banho != "sim")
        {
            escreva("Deseja tomar banho?")
            leia(banho)
        }

        se (banho == "sim")
        {
            escreva("Tomando banho... Banho tomado!")
            irQuarto()
        }
    }

   funcao irQuarto() {
    cadeia quarto
    cadeia porta
    cadeia abrirPorta

    escreva("Deseja ir para o quarto?")
    leia(quarto)

    se (quarto == "sim" ou quarto == "desejo") {
        escreva("Porta do quarto está aberta? ")
        leia(porta)

        enquanto (porta != "sim") {
            escreva("Deseja abrir a porta do quarto? ")
            leia(abrirPorta)

            se (abrirPorta == "sim" ou abrirPorta == "desejo") {
                escreva("Abrindo porta do quarto... Porta Aberta!")
                porta = "sim"
            }
        }
        escreva("Entrando no quarto... Você está dentro do quarto!")
        Dormir()
    }
    senao {
        irQuarto()
    }
   }


  funcao Dormir() {
      cadeia deitar = "nao"
      cadeia dormir
      cadeia acordar

      enquanto (deitar != "sim") {
          escreva("Deseja deitar?")
          leia(deitar)
      }

      escreva("Você está deitado. Deseja dormir? ")
      leia(dormir)

      enquanto (dormir != "sim" e dormir != "desejo") {
          escreva("Você está deitado. Deseja dormir? ")
          leia(dormir)
      }

      escreva("Dormindo! ZzzZzzZZzZzZ\nDeseja acordar? ")
      leia(acordar)

      enquanto (acordar != "sim" e acordar != "desejo") {
          escreva("Dormindo! ZzzZzzZZzZzZ\nDeseja acordar? ")
          leia(acordar)
      }

      Acordar()
  }

  funcao Acordar() {
      escreva("ZzzzZzzZZZ\n Acordando...\n Você está acordado! \n")
  }
  }
